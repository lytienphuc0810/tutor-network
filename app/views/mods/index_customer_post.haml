.big-content
  .header-link.left.active= link_to "CUSTOMER POSTS", "/mods/index_customer_post/1"
  .divider.left= "|"
  .header-link.left.inactive= link_to "TUTOR POSTS", "/mods/index_tutor_post/1"
  .clearboth
  - @customer_posts.each do |customer_post|
    .post-content.left
      .text-content-left.left
        .h1.link= link_to "#{customer_post.user.username.upcase}", "/mods/show_customer_post/#{customer_post.id}"
        .h2= customer_post.user.email
        .h2= "District: "+customer_post.district
        .h2= "City(Province): "+customer_post.city_province
      .text-content-right.left
        .h2= customer_post.content.truncate(750)
      .clearboth
      .text-content-right.left
        - if customer_post.published
          .h2.success= "This post has already been published"
        - else
          .h2.error= "This post has been refused"
  .clearboth
  .paginate.right= will_paginate @customer_posts