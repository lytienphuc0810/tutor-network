.big-content
  .header-link.left.inactive= link_to "CREATE A POST", "/tutor_posts/new_tutor_post"
  .divider.left= "|"
  .header-link.left.inactive= link_to "MY POSTS", "/tutor_posts/index_tutor_post/1"
  .divider.left= "|"
  .header-link.left.active= link_to "MY RECEIPTS", "/tutor_posts/index_recipe/1"
  .clearboth
  - @recipes.each do |recipe|
    .small-content.left
      .text-content-left.left
        .h1.link= link_to "#{recipe.id}", "/tutor_posts/show_recipe/#{recipe.id}"
        .h2= recipe.owner.username
  .clearboth
  .paginate.right= will_paginate @recipes