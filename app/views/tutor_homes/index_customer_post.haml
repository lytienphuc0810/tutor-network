.big-content
  .header-link.left.active= link_to "CREATE", "/tutor_posts/new"
  .divider.left= "|"
  .header-link.left.inactive= link_to "CUSTOMERS", "/tutor_homes/index_customer_post/1"
  .clearboth
  - @customer_posts.each do |customer_post|
    .small-content.left
      .text-content-left.left
        .h1.link= link_to "#{customer_post.user.username.upcase}", "/tutor_homes/show_customer_post/#{customer_post.id}"
        .h2= customer_post.user.email
        .h2= customer_post.user.location.address
        .h2= customer_post.user.rate
      .text-content-right.left
        .h2= customer_post.content.truncate(250)
  .clearboth
  .paginate.right= will_paginate @customer_posts