<div class="big-content">
	<div class="title">SIGN UP</div>
	<div class="devise-content">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  	<%= f.label :username%>
	  	<%= f.text_field :username%>
		  <div class="clearboth"></div>

	  	<%= f.label :email, :class => " email-label" %>
	  	<%= f.email_field :email, :class => " email-field" %>
		  <div class="clearboth"></div>

	  	<%= f.label :password, :class => " password-label" %>
	  	<%= f.password_field :password, :class => " password-field" %>
		  <div class="clearboth"></div>

	  	<%= f.label :password_confirmation, "Re-enter Password", :class => "password-label" %>
	  	<%= f.password_field :password_confirmation, :class => " password-field" %>
		  <div class="clearboth"></div>

			<%= f.label :role, "Sign up as", :class => "role-label" %>
		  <%= f.select :role, options_for_select([['Customer', 'customer'], ['Tutor', 'tutor']]), :class => "select-role" %>
		  <div class="clearboth"></div>

		  <%= f.submit "Sign Up", :class => "submit" %>
		  <div class="clearboth"></div>

		  <div class="links-block">
  			<span ><%= link_to "Sign in", new_session_path(resource_name), :class => ""%></span>
  			<span >|</span>
  			<span ><%= link_to "Forgot password?", new_password_path(resource_name), :class => "" %></span>
  			<span >|</span>
  			<span ><%= link_to "Resend confirmation email", new_confirmation_path(resource_name), :class => "" %></span>
		  </div>
  	  <div class="clearboth"></div>
  	  
	  	<%= devise_error_messages! %>
		<% end %>
	</div>
</div>
