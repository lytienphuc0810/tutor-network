<div class="big-content">
	<div class="title">SIGN IN</div>
	<div class="devise-content">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  	<%= f.label :email, :class => "email-label" %>
	  	<%= f.email_field :email, :class => "email-field", :size => "30" %>
		  <div class="clearboth"></div>

	 	 	<%= f.label :password, :class => "password-label" %>
	  	<%= f.password_field :password, :class => "password-field" %>
		  <div class="clearboth"></div>

		  <% if devise_mapping.rememberable? -%>
	    	<%= f.label :remember_me, "Remember Me", :class => "remember-label" %>
	    	<%= f.check_box :remember_me, :class => "remember-checkbox" %> 
		  <% end -%>
		  <div><%= f.submit "Sign In", :class => "submit" %></div>
		  <div class="clearboth"></div>

		  <div class="links-block">
  			<span><%= link_to "Sign up", new_registration_path(resource_name)%></span>
  			<span>|</span>
  			<span><%= link_to "Forgot password?", new_password_path(resource_name)%></span>	
		  </div>
		<% end %>
	</div>
</div>