<div class="big-content">
	<div class="title">SIGN IN</div>
	<div class="devise-content">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div class="left">
		  	<%= f.label :email, :class => "left email-label" %>
		  	<%= f.email_field :email, :class => "left email-field" %>
		  </div>
		  
		  <div class="clearboth"></div>

		  <div class="left">
		  	<%= f.label :password, :class => "left password-label" %>
		  	<%= f.password_field :password, :class => "left password-field" %>
		  </div>

		  <div class="clearboth"></div>

		  <div><%= f.submit "Sign in", :class => "right submit" %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div class="left">
		    	<%= f.label :remember_me, :class => "left remember-label" %>
		    	<%= f.check_box :remember_me, :class => "left remember-checkbox" %> 
		    </div>
		  <% end -%>

		  <div class="clearboth"></div>

		  <div class="links-block">
  			<span class="left"><%= link_to "Sign up", new_registration_path(resource_name), :class => "right"%></span>
  			<span class="left">|</span>
  			<span class="left"><%= link_to "Forgot password?", new_password_path(resource_name), :class => "right" %></span>	
		  </div>
		  
  	  <div class="clearboth"></div>
		<% end %>
	</div>
</div>