.big-content	
	.header-link.left.active= link_to "CREATE A POST", "/customer_posts/new_customer_post"
	.divider.left= "|"
	.header-link.left.inactive= link_to "MY POSTS", "/customer_posts/index_customer_post/1"
	.divider.left= "|"
	.header-link.left.inactive= link_to "PENDING RECEIPTS ...", "/customer_posts/index_recipe/1"
	.clearboth
	.form-content
		.h1= "NEW POST"
		.form
			= form_for :customer_post, :url => "/customer_posts/create_customer_post/#{@customer_post}" do |f|
				= f.label "Subject"
				= f.select :subject, [['Physics','physics'],['Math','math'],['Chemistry','chemistry'],['English','english'],['Literature','literature'],['Biology','biology'],['Geography','geography'],['History','history']], :id => "subject"
				.clearboth
				= f.label "Tutor fee"
				= f.text_field :tutor_fee, :id => "tutor_fee", :placeholder => "Input tutor fee", :autocomplete => "off"
				.clearboth
				= f.label "Experience"
				= f.text_field :experience, :id => "experience", :placeholder => "Input experience", :autocomplete => "off"
				.clearboth
				= f.label "Content"
				= f.text_area :content, :id => "content", :placeholder => "Input content", :autocomplete => "off"
				.clearboth
				= f.submit "Post", :id => "submit_btn", :class => "submit_btn"
				.clearboth
				.right.error
		-if @customer_post.errors.any?
			#error_explanation
				%h2.errors= pluralize(@customer_post.errors.count, "error") + " prohibited this customer post from being saved:"
				%ul.errors
					-@customer_post.errors.full_messages.each do |msg|
						%li.errors= msg