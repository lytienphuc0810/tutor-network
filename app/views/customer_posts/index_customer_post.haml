.big-content
  .header-link.left.inactive= link_to "CREATE A POST", "/customer_posts/new_customer_post"
  .divider.left= "|"
  .header-link.left.active= link_to "MY POSTS", "/customer_posts/index_customer_post/1"
  .header-link.left.inactive= link_to "MY RECEIPTS", "/customer_posts/index_recipe/1"
  .clearboth
  - @customer_posts.each do |customer_post|
    .post-content.left
      .text-content-left.left
        .h1.link= link_to "#{customer_post.user.username.upcase}", "/customer_posts/show_customer_post/#{customer_post.id}"
        .h2= customer_post.user.email
        .h2= customer_post.user.location.address
        .h2= customer_post.user.rate
      .text-content-right.left
        .h2= customer_post.content.truncate(250)
  .clearboth
  .paginate.right= will_paginate @customer_posts