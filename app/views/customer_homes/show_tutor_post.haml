.big-content
	.header-link.left.inactive= link_to "TUTORS", "/customer_homes/index_tutor_post/1"
	.divider.left= ">>"
	.header-link.left.active= link_to "#{@tutor_post.user.username.truncate(20).upcase}", "/customer_homes/show_tutor_post/#{@tutor_post.id}"
	.divider.left= "|"
	.header-link.left.inactive= link_to "MY RECEIPTS", "/customer_homes/index_recipe/1"
	.clearboth
	.content
		.s4=@tutor_post.user.username.capitalize
		.h2= ratings_for @tutor_post.user, :status, :remote_options => {:url => "/customer_homes/rate/#{@tutor_post.user.id}"}
		.s3.left= "Email: "
		.s5.left=@tutor_post.user.email
		.clearboth
		.s3.left= "Gender: "
		.s5.left=@tutor_post.user.gender.to_s
		.clearboth
		.s3.left= "Subject: "
		.s5.left=@tutor_post.subject.capitalize
		.clearboth
		-if !@tutor_post.experience.nil?
			.s3.left= "Experience: "
			.s5.left=@tutor_post.experience
			.clearboth
		-if !@tutor_post.tutor_fee.nil?
			.s3.left= "Expected Salary: "
			.s5.left=@tutor_post.tutor_fee
			.clearboth
		.s3.left= "Address: "
		.s5.left=@tutor_post.address
		.s3.left=", district: "
		.s5.left=@tutor_post.district
		.s3.left=", city/crovince: "
		.s5.left=@tutor_post.city_province+"."
		.clearboth
		%br
		.s5= @tutor_post.content
		.btn.link_at_the_bottom= link_to "Accept", "/customer_homes/create_recipe/#{@tutor_post.user.id}/#{@tutor_post.id}", :method => "post" 