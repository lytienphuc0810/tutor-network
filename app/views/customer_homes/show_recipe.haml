.big-content
	.header-link.left.inactive= link_to "TUTORS", "/customer_homes/index_tutor_post/1"
	.divider.left= "|"
	.header-link.left.inactive= link_to "MY RECEIPTS", "/customer_homes/index_recipe/1"
	.divider.left= ">>"
	.header-link.left.active= link_to "#{@recipe.others.username.upcase}", "/customer_homes/show_recipe/#{@recipe.id}"
	.clearboth
	.content
		.s4.left= @recipe.others.username.capitalize
		.clearboth
		- if @recipe.poster_confirmation.nil?
			.s3.left= "Waiting for "
			.s5.left=@recipe.others.username.capitalize
			.s3.left="'s confirmation ..."
			.clearboth
		- elsif @recipe.poster_confirmation
			.s3.left= "Confirmed by "
			.s5.left=@recipe.others.username.capitalize
			.clearboth
		-	else
			.s3.left= "Denied by "
			.s5.left=@recipe.others.username.capitalize
			.clearboth
		.s3.left= "Receipt created at: "
		.s5.left=@recipe.created_at.strftime("%H:%M %p on %d/%m/%Y")
		.clearboth
		.s3.left= "Receipt updated at: "
		.s5.left=@recipe.updated_at.strftime("%H:%M %p on %d/%m/%Y")
		.clearboth
		.s3.left= "You ("
		.s5.left=@recipe.owner.username.capitalize
		.s3.left=") have accepted "
		.s5.left=@recipe.others.username.capitalize
		.s3.left="'s following post:"
		.clearboth
		.post_sampple
			.m4=@recipe.tutor_post.user.username.capitalize
			.m3.left= "Email: "
			.m5.left=@recipe.tutor_post.user.email
			.clearboth
			.m3.left= "Gender: "
			.m5.left=@recipe.tutor_post.user.gender.to_s
			.clearboth
			.m3.left= "Subject: "
			.m5.left=@recipe.tutor_post.subject
			.clearboth
			-if !@recipe.tutor_post.experience.nil?
				.m3.left= "Experience: "
				.m5.left=@recipe.tutor_post.experience
				.clearboth
			-if !@recipe.tutor_post.tutor_fee.nil?
				.m3.left= "Expected Salary: "
				.m5.left=@recipe.tutor_post.tutor_fee
				.clearboth
			.m3.left= "Address: "
			.m5.left=@recipe.tutor_post.address
			.m3.left=", district: "
			.m5.left=@recipe.tutor_post.district
			.m3.left=" city/crovince: "
			.m5.left=@recipe.tutor_post.city_province+"."
			.clearboth
			%br
			.m5= @recipe.tutor_post.content.truncate(250)
		.btn.link_at_the_bottom= link_to "Delete", "/customer_homes/delete_recipe/#{@recipe.id}"